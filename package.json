{
  "name": "versionist",
  "version": "6.7.2",
  "main": "bin/versionist.js",
  "description": "Flexible CHANGELOG generation toolkit that adapts to your commit conventions",
  "homepage": "https://github.com/balena-io/versionist",
  "repository": {
    "type": "git",
    "url": "git@github.com:balena-io/versionist.git"
  },
  "preferGlobal": true,
  "bin": {
    "versionist": "./bin/cli.js"
  },
  "scripts": {
    "pretest": "npm run prepare",
    "test": "mocha tests -R spec && node tests/cli/run",
    "posttest": "npm run lint",
    "test-cli": "npm run prepare && node tests/cli/run",
    "lint": "balena-lint -e ts -e js --typescript src/ tests/ bin/ && tsc --noEmit",
    "prepare": "npx tsc",
    "prettify": "balena-lint -e ts -e js --typescript --fix src/ tests/ bin/",
    "versionist": "./bin/cli.js"
  },
  "author": "Juan Cruz Viotti <juan@balena.io>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@balena/lint": "^5.1.0",
    "husky": "^4.2.5",
    "indent-string": "^3.0.0",
    "lint-staged": "^10.2.11",
    "mocha": "^6.2.3",
    "mochainon": "^1.0.0",
    "shelljs": "^0.7.3",
    "tmp": "0.0.28",
    "touch": "^3.1.0"
  },
  "dependencies": {
    "@octokit/rest": "^18.0.0",
    "@types/handlebars": "^4.1.0",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/lodash": "^4.14.157",
    "@types/semver": "^6.2.1",
    "async": "^2.6.3",
    "balena-semver": "^2.3.0",
    "chalk": "^4.1.0",
    "debug": "2.5.1",
    "handlebars": "^4.7.6",
    "handlebars-helpers": "^0.10.0",
    "lodash": "^4.17.15",
    "markdown": "^0.5.0",
    "replace-in-file": "^2.5.0",
    "yaml": "^1.10.2",
    "yargs": "^11.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "versionist": {
    "publishedAt": "2022-07-18T18:02:51.250Z"
  }
